// ====== USER BIO BOX WIDGET ======
	function closeWidgetPanelBox(){ jQuery('.WidgetPanelBox').remove(); }
	
	jQuery(document).ready(function(){
		jQuery('.panelWidgetBoxLink').each(function(i){
			jQuery(this).click(function(e){
				jQuery('.WidgetPanelBox').remove(); 
				e.preventDefault();
				var elem = jQuery(this);
				var hoffset = parseInt(elem.css('margin-top').replace('px', ''));
				var woffset = parseInt(elem.css('padding-right').replace('px', '')) + parseInt(elem.css('padding-left').replace('px', ''));
				var pos = elem.offset();
				var w = elem.width();
				var url = jQuery(this).attr('rel');
				
				var leftpos = pos.left + woffset + w + 5;			
				if(jQuery( window ).width() < 900){
					leftpos = 30;
				}
	
				var content = '<div class="WidgetPanelBox widget_sharebox widget_rounding" style="left: ' + leftpos + 'px; top: ' + (pos.top + hoffset) + 'px;">' + 
				'<div class="widget_closeButton"><a href="javascript:closeWidgetPanelBox();"><i class="fa fa-times" title="close" /></a></div>' + 
				'<div class="wPanelBox_' + i + '"></div></div>';
				jQuery('body').append(content); // write to the content area of the website
				jQuery.post(
					url,
					function(dat){
						if(dat)
							jQuery('.wPanelBox_' + i).html(dat); 
						else jQuery('#wBioBox_' + i).html('<div class="widget_norecord" style="margin-top: 15px;">Information currently unavailable</div>');
					}
				);
			});
		});
		
		//closes panel on click outside
		jQuery(document).mouseup(function (e){
		    var container = jQuery(".WidgetPanelBox");
		    // if the target of the click isn't the container... nor a descendant of the container
		    if (!container.is(e.target) && container.has(e.target).length === 0) {
		    	jQuery('.WidgetPanelBox').remove();
		    }
		});
	});